<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
	<timestamp key="byDay" datePattern="yyyy-MM-dd" />
	
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %p [%t] %c:%L - %m%n</pattern>
		</layout>
	</appender>
	
	<appender name="FileLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.base}/logs/Poker.${byDay}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>${catalina.base}/logs/Poker.${byDay}.%i.zip</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} %p [%t] %c:%L - %msg%n</Pattern>
		</layout>
	</appender>
	
	<logger name="org" level="ERROR" />
	<logger name="com" level="ERROR" />
	<logger name="cn.com.galaxymaster.controller" level="INFO" />
	<logger name="cn.com.galaxymaster.dao.impl" level="INFO" />
	
	<root level="INFO">
		<appender-ref ref="Console" />
		<appender-ref ref="FileLog" />
	</root>
</configuration>
